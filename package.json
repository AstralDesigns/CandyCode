{
  "name": "candycode",
  "productName": "CandyCode",
  "version": "1.0.0",
  "description": "A futuristic AI-powered code editor and workspace with AI integration",
  "main": "dist-electron/main.js",
  "author": {
    "name": "CandyCode Team",
    "email": "CandyCodeTeam@proton.me"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -k \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:hardware": "CANDYCODE_HARDWARE_ACCEL=1 concurrently -k \"npm:dev:vite\" \"npm:dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json && npx wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "package": "npm run build && electron-builder",
    "package:linux": "npm run build && electron-builder --linux",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "install-app": "npm install && node scripts/install-app.js",
    "uninstall-app": "node scripts/uninstall-app.js",
    "update-app": "node scripts/update-app.js"
  },
  "dependencies": {
    "@monaco-editor/loader": "^1.7.0",
    "@monaco-editor/react": "^4.7.0",
    "clsx": "^2.1.1",
    "electron-fetch": "^1.9.1",
    "eslint": "^8.57.0",
    "framer-motion": "^11.5.4",
    "glob": "^11.1.0",
    "lucide-react": "^0.447.0",
    "monaco-editor": "^0.55.1",
    "node-fetch": "^2.7.0",
    "node-pty": "^1.0.0",
    "ollama": "^0.5.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.26.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-image": "^0.5.0",
    "xterm-addon-web-links": "^0.9.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^22.5.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.11",
    "typescript": "^5.6.2",
    "vite": "^7.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.candycode.app",
    "productName": "CandyCode",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "icon.png",
          "icon.ico",
          "icon.icns",
          "tray/**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    }
  }
}
